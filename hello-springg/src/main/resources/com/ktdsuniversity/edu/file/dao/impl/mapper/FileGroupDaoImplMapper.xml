<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ktdsuniversity.edu.file.dao.impl.FileGroupDaoImpl">
   <insert id="insertFileGroup" parameterType="com.ktdsuniversity.edu.file.vo.FileGroupVO"><!--반환 타입 int라서 resultType 못씀 resultType은 select에서만 사용. 파라미터는 적어야 함-->
      <selectKey keyProperty="fileGroupId" order="BEFORE" resultType="string"><!-- 이게 먼저 실행되어서 (order="BEFORE" : insert 전에 실행해라) id 값을 insert에 넣어줘야 함. resultType 적어줘야 함. java.lang.String -> string -->
      SELECT 'FG-' || TO_CHAR(SYSDATE, 'YYYYMMDD-') || LPAD(SEQ_FILE_GROUP_PK.NEXTVAL, 6, '0') 
        FROM DUAL
      </selectKey>
    INSERT INTO FILE_GROUP
    (FILE_GROUP_ID
    , FILE_COUNT )
    VALUES 
    ( #{fileGroupId}
    , #{fileCount})
  </insert>
</mapper>